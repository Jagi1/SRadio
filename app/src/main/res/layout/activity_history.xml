<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fitsSystemWindows="true"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    tools:context=".view.view.activity.FilterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/history_label_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".06"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/history_label"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="true"
            android:text="SONGS HISTORY"
            android:padding="8dp"
            android:textSize="22sp"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/history_close"/>

        <ImageView
            android:id="@+id/history_close"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constrainedWidth="true"
            android:padding="4dp"
            android:src="@drawable/ic_close_24dp"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="@id/history_label"
            app:layout_constraintBottom_toBottomOf="@id/history_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1.1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cardview_dark_background"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/history_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintTop_toBottomOf="@id/history_label_container"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>