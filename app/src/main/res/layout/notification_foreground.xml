<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/station_logo_civ"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/notification_app_logo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerInside"
        android:src="@drawable/web_hi_res_512"/>

    <TextView
        android:id="@+id/app_name"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:elegantTextHeight="true"
        android:fontFamily="@font/play_bold"
        android:gravity="center_vertical"
        android:text="Simple Radio"
        android:textColor="@color/colorSecondaryAccent"
        android:textStyle="bold"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="14sp"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/notification_app_logo"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:elegantTextHeight="true"
        android:fontFamily="@font/play_bold"
        android:textColor="@color/colorSecondaryAccent"
        android:textStyle="bold"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="14sp"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_below="@id/app_name"/>

    <TextView
        android:id="@+id/song"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:fontFamily="@font/play_regular"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:elegantTextHeight="true"
        android:textSize="12sp"
        android:textColor="@color/colorSecondaryAccent"
        android:textStyle="italic"
        android:layout_below="@id/title"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:src="@drawable/ic_play_arrow_24dp" />

    <ImageView
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:src="@drawable/ic_stop_24dp" />


</RelativeLayout>