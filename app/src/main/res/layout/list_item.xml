<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:id="@+id/list_item_root"
    android:layout_marginTop="2dp"
    android:backgroundTint="@color/colorPrimaryDark"
    android:animateLayoutChanges="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/station_logo_civ"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12.5dp"
        android:layout_marginEnd="75dp"
        android:text="TYPE"
        android:textColor="#ffffff"
        android:elegantTextHeight="true"
        android:textStyle="italic"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@id/station_logo_civ"
        app:layout_constraintBottom_toBottomOf="@id/station_logo_civ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12.5dp"
        android:layout_marginEnd="75dp"
        android:text="TITLE"
        android:textColor="@color/colorSecondaryAccent"
        android:elegantTextHeight="true"
        android:textStyle="bold"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:fontFamily="@font/play_bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@id/station_logo_civ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/station_logo_civ"
        app:layout_constraintBottom_toTopOf="@id/type"/>


    <TextView
        android:id="@+id/bitrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12.5dp"
        android:text="128 Kbps"
        android:textColor="@color/colorAccent"
        android:elegantTextHeight="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/type"/>

</androidx.constraintlayout.widget.ConstraintLayout>