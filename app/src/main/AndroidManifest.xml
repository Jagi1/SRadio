<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pl.sbandurski.simpleradio">

    <!-- Internet stuff -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Playing music with service -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    
    <!-- Vibration -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Bubble view -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <application
        android:name="pl.sbandurski.simpleradio.view.application.App"
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="pl.sbandurski.simpleradio.view.view.activity.IntroActivity" android:screenOrientation="portrait"/>
        <activity android:name="pl.sbandurski.simpleradio.view.view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <service android:name="pl.sbandurski.simpleradio.view.service.RadioService" />

        <service android:name=".view.service.FloatingWidgetService"
            android:enabled="true"
            android:exported="false"/>
        
        <receiver
            android:name="pl.sbandurski.simpleradio.view.service.RadioService$NotificationStopHandler"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="Stop_Radio" />
            </intent-filter>
        </receiver>
    </application>

</manifest>